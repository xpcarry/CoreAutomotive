@model List<UsersWithRoles>

@{ 
    var roleId = ViewBag.roleId;
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@ViewBag.RoleName role</h1>
    </div>
</section>

<div class="container">
    <form method="post">
        <div class="card" >
            <div class="card-header">
                <h2>Add or remove users from this role</h2>
            </div>
            <div class="card-body form-group">
                @for (int i=0; i<Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label" >
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer form-group">
                <input type="submit" asp-route-id="@roleId" value="Update" class="btn btn-primary" />
                <a asp-action="ManageUsers" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>

</div>
