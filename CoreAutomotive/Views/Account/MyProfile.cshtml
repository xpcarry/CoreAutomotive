@model MyProfileVM

<div class="container">
    <h2>My Profile</h2>
    <h1>@Model.UserName</h1>
    <p>@Model.Email</p>
    <p>@Model.Name</p>
    <p>@Model.Surname</p>
    <p>@Model.City</p>
    <p>@Model.DateJoined.Date.ToShortDateString()</p>

    <h3>My Cars:</h3>
    <div class="row">
        @foreach (var Car in Model.MyCars)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@Car.Pictures[0].ThumbnailUrl" alt="" />
                    <div class="card-body">
                        <h4>@Car.Price.ToString("c")</h4>
                        <h5>Mileage : @Car.Mileage</h5>
                        <h5>Engine : @Car.Engine</h5>
                        <h5>Power : @Car.Power</h5>
                        <p id="description" class="card-text">@Car.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <form method="post">
                                <div class="btn-group">
                                    <button asp-controller="Home" asp-action="Szczegoly" asp-route-id="@Car.Id" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                            </form>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>