@model ViewProfile

<div class="container">
  <div class="display-4" style="margin-top: 100px; margin-bottom: 30px;">@Model.UserName</div>
  <div style="margin-top:30px; margin-bottom: 30px; font-size: 22px;">
    <p>City: @Model.City</p>
    <p>Announcements: @Model.CarsAmount</p>
    <p>E-mail address:<a href="mailto:@Model.Email"> @Model.Email</a></p>
    <p style="text-muted">User since: @Model.DateJoined.Date.ToShortDateString()</p>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">
    <div class="row">
      @foreach (var car in Model.UserCars) {

        <div class="col-sm-6 mt-3">
          <div class="card car-">
            <div class="card-horizontal">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-7 pl-0 pr-0">
                    <div class="img-square-wrapper">
                      @if (car.Pictures != null) {
                      <a
                        asp-action="Details"
                        asp-controller="Home"
                        asp-route-id="@car.Id"
                      >
                        <img
                          class=""
                          src="@car.Pictures[0].ThumbnailUrl"
                          height="180"
                          width="300"
                          alt="Card image cap"
                        />
                      </a>
                      } else {
                      <a
                        asp-action="Details"
                        asp-controller="Home"
                        asp-route-id="@car.Id"
                      >
                        <img
                          class=""
                          src="http://via.placeholder.com/300x180"
                          alt="Card image cap"
                        />
                      </a>
                      }
                    </div>
                  </div>
                  <div class="col-md-5">
                    <a
                      style="color:unset"
                      asp-action="Details"
                      asp-controller="Home"
                      asp-route-id="@car.Id"
                      ><h4 class="card-title">@car.Brand @car.Model</h4>
                      </a>
                    <span>Price: @car.Price</span><br />
                    <span>Year: @car.ProductionYear</span><br />
                    <span>Mileage: @car.Mileage</span><br />
                    <span>Power: @car.Power</span><br />
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <small class="text-muted"
                >Posted on @car.DateAdded.ToShortDateString() by
                </small>
            </div>
          </div>
        </div>
      }
      </div>
    </div>
  </div>
</div>
