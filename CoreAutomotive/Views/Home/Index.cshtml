@model CoreAutomotive.ViewModels.HomeVM


<div class="row"><h1>@Model.Tytul</h1></div>


<div class="row">
    @foreach (var samochod in Model.Samochody)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="img-thumbnail">
                <img class="img-fluid" src="@samochod.MiniaturkaUrl" alt="">
                <div class="caption">
                    <h4 class="pull-right">@samochod.Cena.ToString("c")</h4>
                    <h4>
                        @samochod.Marka - @samochod.Model - @samochod.RokProdukcji
                    </h4>
                    <h5>
                        Przebieg : @samochod.Przebieg
                    </h5>
                    <h5>
                        Pojemność : @samochod.Pojemnosc
                    </h5>
                    <h5>
                        Moc : @samochod.Moc
                    </h5>
                    <p>@samochod.Opis</p>
                </div>
            </div>
        </div>
    }
</div>
