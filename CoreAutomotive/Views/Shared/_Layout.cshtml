
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/content/site.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
        <div class="container d-flex justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Home</a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Opinia" asp-action="Index" class="nav-link">Opinie</a>
                    </li>
                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
                          method="post" class="offset-md-10">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">LogOut</a></li>
                        </ul>
                    </form>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a id="loginLink" asp-controller="Account" asp-action="Login" class="nav-link">Logowanie</a>
                        </li>
                        <li>
                            <a id="registerLink" asp-controller="Account" asp-action="Register" class="nav-link">Rejestracja</a>
                        </li>
                    </ul>

                }
            </div>
        </div>




    </nav>

    <div class="container">
        @RenderBody()

    </div>



</body>
</html>


<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>